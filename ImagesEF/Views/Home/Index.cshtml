@model IndexViewModel

<link href="~/css/image.css" rel="stylesheet" />

<div class="row">
    @foreach(Image image in @Model.Images)
    {
        <div class="col-md-6 col-md-offset-6 well">
            <a href="/home/imageview?id=@image.Id">@image.Title</a>
            <br />
            <a href="/home/imageview?id=@image.Id"><img src="@image.Link" class="small-image"/></a>
        </div>
    }
</div>